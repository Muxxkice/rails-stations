
<h1>admin</h1>
<%= link_to "new", "/admin/movies/new"  %>
<table class="movie-table">
    <tr class="__header">
        <th>ID</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>上映中</th>
        <th>登録日時</th>
        <th>更新日時</th>
    </tr>
    <% @movies.each do |movie| %>
        <tr class="__items">
            <%# <td><%= movie.id %></td> %>
            <td><%= link_to "#{movie.id}","/admin/movies/#{movie.id}/edit"  %></td>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <td><%= movie.description %></td>
            <td><p><%= movie.image_url %></p></td>
            <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
            <td><%= movie.created_at %></td>
            <td><%= movie.updated_at %></td>
        </tr>
    <% end %>
</table>
